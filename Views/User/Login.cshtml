
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<body>
    <form action="DisplayInfo" method="post">
        <div class="container">
            <h1>Login</h1>
            <p>Please fill in this form to login your account.</p>
            <hr>

            <label for="email"><b>Name</b></label>
